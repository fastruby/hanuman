{{!-- called from surveyTemplate and dislpays each answer type as readonly --}}
<div class="row">
  <div class="draggable-target-message"> Position under this question </div>
  <div class="col-sm-4">
    <span class="glyphicons glyphicons-sorting">
      {{#tooltip-on-element duration=700}}Sort question{{/tooltip-on-element}}
    </span>
    {{#unless ancestrable}}
      <span class="glyphicons glyphicons-move-square">
        {{#tooltip-on-element duration=700}}Add to another question{{/tooltip-on-element}}
      </span>
    {{/unless}}
    <span data-test="question.questionText">{{question.questionText}}</span>
  </div>
  <div class="col-sm-2" data-test="question.answerType.name">{{question.answerType.name}}</div>
  <div class="col-sm-4">
    {{question.sortOrder}} [{{question.railsId}}]
    {{typeInitial}}
    {{#if question.rule}}
      [CL show
      {{#each question.rule.conditions as |condition|}}
        if {{condition.questionId}} {{condition.operator}} {{condition.answer}}
        {{question.ruleMatchType}}
      {{/each}}
      ]
    {{/if}}
  </div>
  <div class="col-sm-2">
    {{#link-to "survey_templates.record.questions.edit" question.id class="btn btn-sm btn-success"}}
      <span class="glyphicons glyphicons-pencil"></span>
        Edit
    {{/link-to}}
    <a class="btn btn-delete" data-test="confirm-delete-question-link" onclick={{action 'confirm'}}>
      <span class="glyphicon glyphicon-trash"></span>
    </a>
    <div class="delete-confirm">
      <small class="{{if isFullyEditable 'hide'}}">Performing this delete will also destroy associated historical data.<br></small>
      <small>Are you sure you want to delete this question?</small><br>
      <button class="btn btn-success" data-test="delete-question-link" onclick={{action 'delete'}}>Yes</button>
      <button class="btn" onclick={{action 'cancel'}}>No</button>
    </div>
  </div>
</div>

{{yield}}
