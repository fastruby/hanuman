<div class="form-group">
  <div class="col-sm-12">
    <input type="checkbox"
          disabled={{question.surveyTemplate.lock}}
          name="isHidden"
          checked={{question.hidden}}
          onchange={{action (mut question.hidden) value="target.checked"}} /> Hidden
          <a tabindex="0" role="button" data-toggle="popover" data-trigger="click" title="Hidden" data-content="A question will be automatically hidden if there is a visibility rule associated with it." class="bootstrap-popover">
            <span class="glyphicons glyphicons-info-sign"></span>
          </a>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-12">
    {{#form-field for='parentId' label='Parent Relationship'}}
      <select class="form-control" data-test="ancestry-select" onchange={{action ancestryChange value="target.value"}}>
        <option></option>
        {{#each ancestryQuestions as |opQuestion|}}
          <option value={{opQuestion.id}} selected={{eq opQuestion.id question.parentId}}>{{opQuestion.questionText}} - {{opQuestion.id}}</option>
        {{/each}}
      </select>
    {{/form-field}}
  </div>
</div>

<div class="form-group">
  <div class="col-sm-12">
    {{#form-field for='dbColumnName' label='DB Column Name'}}
      <input type="text"
            class="form-control"
            data-test="question.dbColumnName"
            value={{question.dbColumnName}}
            oninput={{action (mut question.dbColumnName) value="target.value"}} />
    {{/form-field}}
  </div>
</div>

