<div class="row">
  <div class="col-md-4"><h4>Conditional Logic</h4></div>
  <div class="col-md-4">
    <select data-test="rule-match-type-select" class="form-control" onchange={{action "setRuleMatchType" value="target.value"}}>
      <option value="any" selected={{eq question.rule.matchType 'any'}}>any</option>
      <option value="all" selected={{eq question.rule.matchType 'all'}}>all</option>
    </select>
  </div>
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th width="10px"></th>
            <th>Question</th>
            <th>Operator</th>
            <th>Answer</th>
            <th width="10px"></th>
            <th width="10px"></th>
          </tr>
        </thead>
        <tbody>
          {{#each question.rule.conditions as |condition|}}
            {{condition-row condition=condition rule=question.rule questions=questions save='saveCondition' isNewCondition=false}}
          {{/each}}
          {{condition-row rule=question.rule questions=questions save='saveCondition' isNewCondition=true}}
        </tbody>
      </table>
    </div>
      <div>
        <span class="label label-primary">{{question.rule.matchType}}</span>
        {{#each question.rule.conditions as |condition|}}
          <span class="label label-default">
            if {{condition.questionId}} {{condition.operator}} {{condition.answer}}
          </span>
        {{/each}}
      </div>
  </div>
</div>