<div class="page-header">
  <div class="pull-left">
    <a class="btn btn-primary" href="/hanuman/survey_templates/{surveyTemplate.id}}"><span class="glyphicon glyphicon-chevron-left"></span>
      Back to Survey Template Details
    </a>
  </div>
  <div class="pull-right">
    <a class="btn btn-primary" href="/hanuman/survey_templates/{{surveyTemplate.id}}/update_survey_data">
      Resort Submitted Data
    </a>
  </div>
</div>

<div class="form-horizontal">
  <div class="well">
    <div class="form-group">
      <label class="col-sm-2 control-label">Survey Template</label>
      <div class="col-sm-4">
        <p class="form-control-static" data-test="surveyTemplate.name">
          {{surveyTemplate.name}}
        </p>
      </div>
      <label class="col-sm-2 control-label">Type</label>
      <div class="col-sm-4">
        <p class="form-control-static">
          {{surveyTemplate.surveyType}}
        </p>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-2 control-label">Status</label>
      <div class="col-sm-4">
        <p class="form-control-static" data-test="surveyTemplate.status">
          {{surveyTemplate.status}}
        </p>
      </div>
      <label class="col-sm-2 control-label">Fully Editable</label>
      <div class="col-sm-4">
        <p class="form-control-static">
          {{surveyTemplate.fullyEditable}}
        </p>
      </div>
    </div>
  </div>
  <div class="panel panel-info">
    <div class="panel-heading">
      <div class="panel-title">Questions</div>
    </div>
    <div class="panel-body">

      <div class="row">
        <div class="col-sm-3"><strong>Label</strong></div>
        <div class="col-sm-3"><strong>Question Type</strong></div>
        <div class="col-sm-3"><strong>Actions</strong></div>
        <div class="col-sm-3"><strong></strong></div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          &nbsp;
        </div>
      </div>

      {{#sortable-group tagName="ul" class="sortable ui-sortable" onChange="reorderQuestions" as |group|}}
        {{#each sortedQuestions as |question|}}
          {{#sortable-item tagName="li" class="row question-border item" model=question group=group handle=".glyphicon-sort"}}
            {{question-row question=question deleteQuestion='deleteQuestion'}}
          {{/sortable-item}}
        {{/each}}
      {{/sortable-group}}

      {{!-- Add new question --}}
      <div class="row ember-view">
        <div class="col-sm-2">
          {{#link-to "survey_templates.show.questions.new" class="btn btn-success"}}
            <span class="glyphicon glyphicon-plus"></span>
              Add
          {{/link-to}}
        </div>
        <div class="col-sm-3"></div>
        <div class="col-sm-3"></div>
        <div class="col-sm-1"></div>
      </div>
    </div>
  </div>
 </div>

{{outlet}}
