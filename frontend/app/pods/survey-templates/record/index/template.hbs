<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Survey Template Details</h3>
    {{#link-to 'survey_templates.record.edit' surveyTemplate data-test="edit-survey-link" class="btn btn-success panel-title-button-right"}}
      <span class="glyphicon glyphicon-pencil"></span>
      Edit Survey Template
    {{/link-to}}
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Survey Template</label>
    <div class="col-sm-4">
      <p class="form-control-static" data-test="surveyTemplate.name">
        {{surveyTemplate.name}}
      </p>
    </div>
    <label class="col-sm-2 control-label">Type</label>
    <div class="col-sm-4">
      <p class="form-control-static">
        {{surveyTemplate.surveyType}}
      </p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Status</label>
    <div class="col-sm-4">
      <p class="form-control-static" data-test="surveyTemplate.status">
        {{surveyTemplate.status}}
      </p>
    </div>
    <label class="col-sm-2 control-label">Fully Editable</label>
    <div class="col-sm-4">
      <p class="form-control-static">
        {{surveyTemplate.fullyEditable}}
      </p>
    </div>
  </div>
</div>