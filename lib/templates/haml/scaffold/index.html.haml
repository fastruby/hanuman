- content_for :navbar_hanuman do
  active
- content_for :navbar_hanuman_<%= plural_table_name %> do
  active

.page-header
  = link_to new_<%= singular_table_name %>_path, class: "btn btn-primary" do
    %span.glyphicon.glyphicon-plus
    New <%= human_name.titleize %>
  %h1 <%= plural_table_name.titleize %>

.table-responsive
  %table.table.table-striped.table-hover
    %thead
      %tr
<% for attribute in attributes -%>
        %th <%= attribute.human_name.titleize %>
<% end -%>
        %th

    %tbody
      - @<%= plural_table_name %>.each do |<%= singular_table_name %>|
        %tr
<% for attribute in attributes -%>
          %td= link_to <%= singular_table_name %>.<%= attribute.name %>, <%= singular_table_name %>
<% end -%>
          %td
            = link_to <%= singular_table_name %>, data: {confirm: "Are you sure you want to delete this <%= human_name.titleize %>?"}, method: :delete, class: "btn btn-xs btn-danger" do
              %span.glyphicon.glyphicon-trash
