<div class="row">
  <div class="col-sm-1"></div>
  <div class="col-sm-5">{{input type="text" value=question_text class="form-control"}}</div>
  <div class="col-sm-5">
    {{view Ember.Select
       content=controllers.answer_types.content
       optionValuePath="content.id"
       optionLabelPath="content.name"
       selectionBinding="content.answer_type.content"
       class="form-control"}}
  </div>
  {{partial "question_edit_buttons"}}
</div>