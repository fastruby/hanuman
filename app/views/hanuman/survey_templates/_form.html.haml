- if @survey_template.errors.any?
  - flash.now[:alert] = @survey_template.errors.full_messages.join(', ').to_s

= form_for @survey_template, html: {class: "form-horizontal"} do |f|

  .panel-body
    .form-group
      = f.label :name, class: "col-sm-2 control-label"
      .col-sm-4
        = f.text_field :name, class: "form-control"
    .form-group
      = f.label :survey_type, "Type", class: "col-sm-2 control-label"
      .col-sm-4
        = f.text_field :survey_type, class: "form-control"
    .form-group
      = f.label :status, class: "col-sm-2 control-label"
      .col-sm-4
        = f.collection_select :status, Hanuman::SurveyTemplate::STATUSES, :to_s, :to_s, {prompt: false}, {class: "form-control"}
    .form-group
      .col-sm-offset-2.col-sm-10
        = f.submit "Save", class: "btn btn-primary"
        = link_to "Cancel", survey_templates_path, data: {confirm: "Are you sure you want to Cancel?"}, class: "btn btn-default"
