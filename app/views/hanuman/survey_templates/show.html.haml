- content_for :navbar_hanuman do
  active
- content_for :navbar_hanuman_survey_templates do
  active
- content_for :title do
  Survey Template Details

.page-header
  = link_to edit_survey_template_path(@survey_template), class: "btn btn-primary" do
    %span.glyphicon.glyphicon-pencil
    Edit Survey Template
  %h1 Survey Template Details

.table-responsive
  %table.table.table-striped.table-hover
    %tbody
      %tr
        %td Name
        %td
          %b= @survey_template.name
      %tr
        %td Status
        %td
          %b= @survey_template.status
      %tr
        %td Survey type
        %td
          %b= @survey_template.survey_type
      -# need to add partial for survey extension here
      = render "hanuman/survey_templates/formextensionreadonly"
      -# loop through survey questions
      - @survey_template.survey_questions.each do |sq|
        %tr
          %td
            = sq.question.question_text
          %td
            = sq.question.answer_type.name
