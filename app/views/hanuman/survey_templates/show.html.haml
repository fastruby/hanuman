- content_for :title do
  Survey Template Details
- content_for :title_parent do
  Design a Survey
- content_for :title_icon do
  glyphicon-edit
- content_for :title_actions do
  = render "actions", locals: {}
- content_for :navbar_hanuman do
  active
- content_for :navbar_hanuman_survey_templates do
  active

.panel.panel-info
  .panel-heading
    %h3.panel-title Survey Template Details
    = link_to edit_survey_template_path(@survey_template), class: "btn btn-success panel-title-button-right" do
      %span.glyphicon.glyphicon-pencil
      Edit Survey Template
    = link_to duplicate_survey_template_path(@survey_template), data: {confirm: "Are you sure you want to duplicate this Survey Template?"}, method: :patch, class: "btn btn-success panel-title-button-right-2" do
      %span.glyphicon.glyphicon-repeat
      Duplicate Survey Template
    = link_to duplicate_survey_template_path(@survey_template), data: {confirm: "Are you sure you want to duplicate this Survey Template?"}, method: :patch, class: "btn btn-success panel-title-button-right-2" do
      %span.glyphicon.glyphicon-repeat
      Duplicate Survey Template

.form-horizontal

  .well
    .form-group
      = label_tag nil, "Name", class: "col-sm-1 control-label"
      .col-sm-11
        %p.form-control-static= @survey_template.name
    .form-group
      = label_tag nil, "Type", class: "col-sm-1 control-label"
      .col-sm-3
        %p.form-control-static= @survey_template.survey_type
      = label_tag nil, "Status", class: "col-sm-1 control-label"
      .col-sm-3
        %p.form-control-static= @survey_template.status
      = label_tag nil, "Created", class: "col-sm-1 control-label"
      .col-sm-3
        %p.form-control-static= @survey_template.created_at.in_time_zone("Pacific Time (US & Canada)").strftime("%m/%d/%Y")


  .panel.panel-info
    .panel-heading.chevron{:"data-toggle" => "collapse", :"data-target" => "#collapse_1"}
      .panel-title
        .pull-left
          %span.glyphicon.glyphicon-chevron-right
          %span.glyphicon.glyphicon-chevron-down
        .clearfix
    .panel-collapse.collapse.in{:id => "collapse_1"}
      .panel-body
        .pull-right.edit-delete
          = link_to admin_path + "/#/survey_templates/" + @survey_template.id.to_s, class: "btn btn-xs btn-success" do
            %span.glyphicon.glyphicon-pencil
            Edit Survey Template
        .clearfix
        = render ("hanuman/survey_templates/formextensionreadonly")
        - @survey_template.questions.each do |q|
          = render ("hanuman/survey_templates/dynamicfield"), q: q
