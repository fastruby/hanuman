- content_for :title do
  Answer Type Details
- content_for :title_parent do
  Answer Types
- content_for :title_icon do
  glyphicon-exclamation-sign
- content_for :title_actions do
  = render "actions", locals: {}
- content_for :navbar_hanuman do
  active
- content_for :navbar_hanuman_answer_types do
  active

.panel.panel-info
  .panel-heading
    %h3.panel-title Answer Type Details
    = link_to edit_answer_type_path(@answer_type), class: "btn btn-primary panel-title-button-right" do
      %span.glyphicon.glyphicon-pencil
      Edit Answer Type

  %form.form-horizontal
    .panel-body
      .form-group
        %label.col-sm-2.control-label Name
        .col-sm-10
          %p.form-control-static= @answer_type.name
      .form-group
        %label.col-sm-2.control-label Descriptive Name
        .col-sm-10
          %p.form-control-static= @answer_type.descriptive_name
      .form-group
        %label.col-sm-2.control-label Description
        .col-sm-10
          %p.form-control-static= @answer_type.description
      .form-group
        %label.col-sm-2.control-label Has Answer Choices
        .col-sm-10
          %p.form-control-static= @answer_type.has_answer_choices
      .form-group
        %label.col-sm-2.control-label External Data Source
        .col-sm-10
          %p.form-control-static= @answer_type.external_data_source
      .form-group
        %label.col-sm-2.control-label Status
        .col-sm-10
          %p.form-control-static= @answer_type.status
      .form-group
        %label.col-sm-2.control-label Answer Choice Type
        .col-sm-10
          %p.form-control-static= @answer_type.answer_choice_type
      .form-group
        %label.col-sm-2.control-label Element Type
        .col-sm-10
          %p.form-control-static= @answer_type.element_type
