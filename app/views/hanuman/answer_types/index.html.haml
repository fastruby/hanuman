  active

.panel.panel-info
  .panel-heading
    %h3.panel-title Answer Types
  .panel-body
    .table-responsive
      %table.table.table-hover
        %thead
          %tr
            %th= sortable "answer_types.name", "Name"
            %th= sortable "answer_types.descriptive_name", "Descriptive Name"
            %th= sortable "answer_types.description", "Description"
            %th= sortable "answer_types.has_answer_choices", "Has Answer Choices"
            %th= sortable "answer_types.external_data_source", "External Data Source"
            %th= sortable "answer_types.status", "Status"
            %th= sortable "answer_types.answer_choice_type", "Answer Choice Type"
            %th= sortable "answer_types.element_type", "Element Type"
            %th
            %th

        %tbody
          - @answer_types.each do |answer_type|
            %tr
              %td= link_to answer_type.name, answer_type
              %td= link_to answer_type.descriptive_name, answer_type unless answer_type.descriptive_name.blank?
              %td= link_to answer_type.description, answer_type unless answer_type.descriptive_name.blank?
              %td= link_to answer_type.has_answer_choices, answer_type unless answer_type.has_answer_choices.blank?
              %td= link_to answer_type.external_data_source, answer_type unless answer_type.external_data_source.blank?
              %td= link_to answer_type.status, answer_type unless answer_type.status.blank?
              %td= link_to answer_type.answer_choice_type, answer_type unless answer_type.answer_choice_type.blank?
              %td= link_to answer_type.element_type, answer_type unless answer_type.element_type.blank?
              %td
                = link_to edit_answer_type_path(answer_type) do
                  %span.glyphicon.glyphicon-pencil
              %td
                = link_to answer_type, data: {confirm: "Are you sure you want to delete this Answer Type?"}, method: :delete do
                  %span.glyphicon.glyphicon-trash
