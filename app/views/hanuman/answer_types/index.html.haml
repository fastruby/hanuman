- content_for :navbar_hanuman do
  active
- content_for :navbar_hanuman_answer_types do
  active
- content_for :title do
  Answer Types

.panel
  .panel-heading
    %h3.panel-title Answer Types
    = link_to new_answer_type_path, class: "btn btn-success panel-title-button-right" do
      %span.glyphicon.glyphicon-plus
      New Answer Type
  .panel-body
    .table-responsive
      %table.table.table-hover
        %thead
          %tr
            %th Name
            %th Descriptive Name
            %th Description
            %th Has Answer Choices
            %th External Data Source
            %th Status
            %th Answer Choice Type
            %th
            %th

        %tbody
          - @answer_types.each do |answer_type|
            %tr
              %td= link_to answer_type.name, answer_type
              %td= link_to answer_type.descriptive_name, answer_type unless answer_type.descriptive_name.blank?
              %td= link_to answer_type.description, answer_type unless answer_type.descriptive_name.blank?
              %td= link_to answer_type.has_answer_choices, answer_type unless answer_type.has_answer_choices.blank?
              %td= link_to answer_type.external_data_source, answer_type unless answer_type.external_data_source.blank?
              %td= link_to answer_type.status, answer_type
              %td= link_to answer_type.answer_choice_type, answer_type unless answer_type.answer_choice_type.blank?
              %td
                = link_to edit_answer_type_path(answer_type) do
                  %span.glyphicon.glyphicon-pencil
              %td
                = link_to answer_type, data: {confirm: "Are you sure you want to delete this Answer Type?"}, method: :delete do
                  %span.glyphicon.glyphicon-trash
