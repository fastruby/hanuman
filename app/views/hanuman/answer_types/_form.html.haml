- if @answer_type.errors.any?
  - flash.now[:alert] = @answer_type.errors.full_messages.join(', ').to_s

= form_for @answer_type, html: {class: "form-horizontal"} do |f|

  .panel-body
    .form-group
      = f.label :name, class: "col-sm-2 control-label"
      .col-sm-4
        = f.text_field :name, class: "form-control"
    .form-group
      = f.label :descriptive_name, class: "col-sm-2 control-label"
      .col-sm-4
        = f.text_field :descriptive_name, class: "form-control"
    .form-group
      = f.label :has_answer_choices, class: "col-sm-2 control-label"
      .col-sm-4
        = f.text_field :has_answer_choices, class: "form-control"
    .form-group
      = f.label :external_data_source, class: "col-sm-2 control-label"
      .col-sm-4
        = f.text_field :external_data_source, class: "form-control"
    .form-group
      = f.label :status, class: "col-sm-2 control-label"
      .col-sm-4
        = f.select :status, ["active", "inactive"], {prompt: false}, {class: "form-control"}
    .form-group
      .col-sm-offset-2.col-sm-10
        = f.submit "Save", class: "btn btn-primary"
        = link_to "Cancel", answer_types_path, data: {confirm: "Are you sure you want to Cancel?"}, class: "btn btn-default"
