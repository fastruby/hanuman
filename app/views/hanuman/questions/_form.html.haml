- if @question.errors.any?
  - flash.now[:alert] = @question.errors.full_messages.join(', ').to_s

= form_for @question, html: {class: "form-horizontal"} do |f|

  .form-group
    = f.label :question_text, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_area :question_text, class: "form-control"
  .form-group
    = f.label :answer_type_id, class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :answer_type_id, class: "form-control"
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit "Save", class: "btn btn-primary"
      = link_to "Cancel", questions_path, data: {confirm: "Are you sure you want to Cancel?"}, class: "btn btn-default"
