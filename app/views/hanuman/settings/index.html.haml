- content_for :title do
  Settings
- content_for :title_parent do
  Settings
- content_for :title_icon do
  glyphicon-cog
- content_for :title_actions do
  = render "actions", locals: {}
- content_for :navbar_hanuman do
  active
- content_for :navbar_hanuman_settings do
  active

.panel
  .panel-heading
    %h3.panel-title Settings

  .panel-body
    .pull-right= paginate @settings
    .table-responsive
      %table.table.table-hover
        %thead
          %tr
            %th Key
            %th Value
            %th

        %tbody
          - @settings.each do |setting|
            %tr
              %td= link_to setting.key, setting
              %td= link_to setting.value, setting
              %td
                = link_to setting, data: {confirm: "Are you sure you want to delete this Setting?"}, method: :delete do
                  %span.glyphicon.glyphicon-trash

    .pull-right= paginate @settings
