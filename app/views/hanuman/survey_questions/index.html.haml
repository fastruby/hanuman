- content_for :navbar_hanuman do
  active
- content_for :navbar_hanuman_survey_questions do
  active

.page-header
  = link_to new_survey_question_path, class: "btn btn-primary" do
    %span.glyphicon.glyphicon-plus
    New Survey Question
  %h1 Survey Questions

.table-responsive
  %table.table.table-striped.table-hover
    %thead
      %tr
        %th Survey Template
        %th Question
        %th Sort Order
        %th Step
        %th Duplicator
        %th

    %tbody
      - @survey_questions.each do |survey_question|
        %tr
          %td= link_to survey_question.survey_template.name, survey_question unless survey_question.survey_template.blank?
          %td= link_to survey_question.question.question_text, survey_question unless survey_question.question.blank?
          %td= link_to survey_question.sort_order, survey_question
          %td= link_to survey_question.step, survey_question
          %td= link_to survey_question.duplicator.to_s, survey_question
          %td
            = link_to survey_question, data: {confirm: "Are you sure you want to delete this Survey Question?"}, method: :delete do
              %span.glyphicon.glyphicon-trash
