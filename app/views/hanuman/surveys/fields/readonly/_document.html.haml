.form-group
  = render "hanuman/surveys/fields/readonly/shared/label", o: o
  .col-sm-7.doc-preview
    - o.observation_documents.each do |d|
      -# - doc_name = d.path
      -# - doc_name = doc_name.sub ".pdf", ".png" if doc_name.include? ".pdf"
      - if ['pdf','jpg','png','gif'].include? d.document.url.last(3)
        = cl_image_tag(d.document.my_public_id, size: '50x50', crop: :fill, format: 'jpg', class: 'doc-preview')
      - else
        = image_tag("file-icon.png")
      = link_to d.document.my_public_id +  " | download file", cloudinary_url(d.document.url, attachment: true, resource_type: :raw), html_options = { download: true }
      %br
      = d.description
      %br
      %br
      %br
