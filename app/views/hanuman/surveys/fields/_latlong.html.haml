.form-group.survey-map-field
  .col-sm-7.col-sm-offset-5.map-container.hidden
    .hidden
    -# the id of the map div must be unique for the mapping js to work, using index to get uniqueness
    .col-sm-12.latlong{id: "map_#{index}", style: "width:100%; height:320px;", :"data-latlong" => ff.object.answer, :"data-infowindow" => ff.object.question.question_text}
    .helper-text.helperbelow
      %p
    .map-buttons
      %a.btn.btn-success.edit-map{:"data-original-latlong" => "#{ff.object.answer}"} Pin a Location on Map
      %a.btn.btn-default.cancel-map{style: "display:none;"} Cancel
    .col-sm-12
      &nbsp;
      .hidden
        #edit-map-lat
        #edit-map-lng
  .clearfix
  .col-sm-12
    &nbsp;
  = render "hanuman/surveys/fields/shared/label", ff: ff
  .col-sm-5
    = ff.text_field :answer, class: "form-control latlong-entry", maxlength: 230
    = ff.hidden_field :entry
  .col-sm-2
    %a.btn.btn-success.map-toggle-button  Enter Location On Map
