- content_for :navbar_hanuman do
  active
- content_for :navbar_hanuman_surveys do
  active

.page-header
  = link_to duplicate_survey_path(@survey), data: {confirm: "Are you sure you want to duplicate this Survey?"}, method: :patch, class: "btn btn-primary" do
    %span.glyphicon.glyphicon-repeat
    Duplicate
  %h5
    %b Mode:
    %i Review
  %h1= @survey.survey_template.name

.form-horizontal

  .well
    .form-group
      = label_tag nil, "Author", class: "col-sm-5 control-label"
      .col-sm-7
        %p.form-control-static= @survey.author
    .form-group
      = label_tag nil, "Created", class: "col-sm-5 control-label"
      .col-sm-7
        %p.form-control-static= @survey.created_at.in_time_zone("Pacific Time (US & Canada)").strftime("%A %B %e, %Y %l:%M %p")

  - sets = @survey.sets
  - first_set = sets.min
  - last_set = sets.max
  - sets.each do |set|
    - if set == last_set
      -# do panel line for add an entry if last observation group
      .panel.panel-success
        .panel-body.text-right
          = link_to edit_survey_path(@survey.id,@survey.observations.filtered_by_set(set).last.survey_question.step,set+1), class: "btn btn-xs btn-success" do
            %span.glyphicon.glyphicon-plus
            Add Entry
    - observations = @survey.observations.filtered_by_set(set)
    - if observations.count > 0
      -# do panel
      = render ("hanuman/surveys/fields/readonly/shared/panel"), show: true, s: @survey, o: observations, set: set, setf: (set == first_set ? true : false), setl: (set == last_set ? true : false)
