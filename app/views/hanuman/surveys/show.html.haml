- content_for :navbar_hanuman do
  active
- content_for :navbar_hanuman_surveys do
  active

.page-header
  = link_to duplicate_survey_path(@survey), data: {confirm: "Are you sure you want to duplicate this Survey?"}, method: :patch, class: "btn btn-primary" do
    %span.glyphicon.glyphicon-repeat
    Duplicate
  %h5
    %b= @survey.project.organization.name + ": "
    %i= @survey.project.name
    |
    %b Mode:
    %i Review
  %h1= @survey.survey_template.name

- current_group = 0

.table-responsive
  %table.table.table-striped.table-hover
    %thead
      %tr
        %th{colspan: "3", style: "background-color: black; padding: 1px;"}
      %tr
        %th Survey ID
        %th= @survey.id
      %tr
        %th Survey Created
        %th= @survey.created_at.in_time_zone("Pacific Time (US & Canada)").strftime("%A, %B %e, %Y %l:%M %p")
      %tr
        %th Survey Updated
        %th= @survey.updated_at.in_time_zone("Pacific Time (US & Canada)").strftime("%A, %B %e, %Y %l:%M %p")
    %tbody
      %tr
        %td{colspan: "3", style: "background-color: black; padding: 1px;;"}
      %tr
        %td
        %td{style: "text-align: right;"}
          = link_to edit_survey_path(@survey.id, 0), class: "btn btn-xs btn-primary" do
            %span.glyphicon.glyphicon-pencil
            Edit
      - @survey.observations.each do |o|
        - if current_group != o.group
          %tr
            %td{colspan: "3", style: "background-color: black; padding: 1px;"}
          - if o.survey_question.group == ("step_2" || "step_2_ajax")
            %tr
              %td
              %td{style: "text-align: right;"}
                = link_to edit_survey_path(@survey.id, o.group), class: "btn btn-xs btn-primary" do
                  %span.glyphicon.glyphicon-pencil
                  Edit
              %td{width: "1%"}
                = link_to o, data: {confirm: "Are you sure you want to delete this entry?"}, method: :delete, class: "btn btn-xs btn-danger" do
                  %span.glyphicon.glyphicon-trash
              %td{width: "1%"}
                = link_to survey_step_path("step_2"), class: "btn btn-xs btn-primary" do
                  %span.glyphicon.glyphicon-plus
          - else
            %tr
              %td
              %td{style: "text-align: right;"}
                = link_to edit_survey_path(@survey.id, o.group), class: "btn btn-xs btn-primary" do
                  %span.glyphicon.glyphicon-pencil
                  Edit
        - current_group = o.group
        = render ("hanuman/surveys/show/" + o.survey_question.question.answer_type.name), o: o rescue render "hanuman/surveys/show/rescue/notsupported", o: o
      %tr
        %td{colspan: "3", style: "background-color: black; padding: 1px;"}