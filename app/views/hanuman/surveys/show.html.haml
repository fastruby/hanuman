- content_for :navbar_hanuman do
  active
- content_for :navbar_hanuman_surveys do
  active

.page-header
  = link_to edit_survey_path(@survey), class: "btn btn-primary" do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h5
    = @survey.project.organization.name + ": "
    %i= @survey.project.name
    |
    Mode:
    %i Review
  %h1= @survey.survey_template.name

.table-responsive
  %table.table.table-striped.table-hover
    %tbody
      - @survey.observations.each do |o|
        = render ("hanuman/shared/show_" + o.survey_question.question.answer_type.name), o: o rescue render "hanuman/shared/rescue_show_notsupported", o: o