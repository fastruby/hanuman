- content_for :navbar_hanuman do
  active
- content_for :navbar_hanuman_surveys do
  active

.page-header
  = form_tag new_survey_path, method: 'get' do
    = submit_tag "Start Entry", class: "btn btn-primary"
    = select_tag :survey_template_id,
                  options_from_collection_for_select(Hanuman::SurveyTemplate.all, :id, :name, params[:survey_template_id]),
                  {class: 'form-control'}
    = label_tag "Select Survey:"
  %h1 Surveys

.table-responsive
  %table.table.table-striped.table-hover
    %thead
      %tr
        %th Survey ID
        %th Survey Template
        %th Project
        %th

    %tbody
      - @surveys.each do |survey|
        %tr
          %td= link_to survey.id, survey
          %td= link_to survey.survey_template.name, survey
          %td= link_to survey.project.name, survey
          %td
            = link_to survey, data: {confirm: "Are you sure you want to delete this Survey?"}, method: :delete do
              %span.glyphicon.glyphicon-trash