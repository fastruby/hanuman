.form-group
  = render "hanuman/surveys/_form/shared/label", ff: ff, index: index
  .col-sm-7
    - if ff.object.survey_question.question.answer_choices.blank?
      = ff.text_field :answer, value: "There are no available Answer Options!", class: "form-control", readonly: true
    - else
      = ff.collection_radio_buttons :answer, ff.object.survey_question.question.answer_choices, :option_text, :option_text
    = ff.hidden_field :group