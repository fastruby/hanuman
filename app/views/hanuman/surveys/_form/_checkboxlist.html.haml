.form-group
  = render "hanuman/surveys/_form/shared/label", ff: ff, index: index
  .col-sm-7    
    - if ff.object.survey_question.question.answer_choices.blank?
      = ff.text_field :answer, value: "There are no available Answer Options!", class: "form-control", readonly: true
    - else
      - cbl_answers = ff.object.observation_answers.map{|oa| oa.answer_choice_id}
      - ff.object.survey_question.question.answer_choices.each do |a|
        = check_box_tag "survey[observations_attributes][#{index}][answer_choice_ids][]",
                           a.id, cbl_answers.include?(a.id), {class: 'form-control'}
        = a.option_text